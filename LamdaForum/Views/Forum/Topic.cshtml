@model LamdaForum.Web.Models.Forum.ForumTopicModel

<h1>Welcome to the @Model.Forum.Title Forum !</h1>

@if (Model.Posts.Any())
{
    <table class="table table-hover table-bordered table-responsive">
        <tbody>
            @foreach (var post in Model.Posts)
            {
                <tr>
                    <td>
                        <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id">@post.Title</a>
                        @post.Title
                    </td>
                    <td>
                        @post.AuthorName
                    </td>
                    <td>
                        @post.DatePosted
                    </td>
                    <td>
                        @post.AuthorRating
                    </td>
                    <td>
                        @post.RepliesCount
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="noPosts">
        <h3>
            It looks like there are no @Model.Forum.Title posts yet <br />
            Why not <a asp-controller="Post" asp-action="Create" asp-route-id="@Model.Forum.Id"><span>create</span></a>
            one ?
        </h3>
    </div>
}